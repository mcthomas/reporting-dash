<div class="container">
<table class="responsive-table highlight">
  <thead>
  <tr>
    <th>Channel</th>
    <th>Name</th>
    <th>Structure</th>
    <th>Tone</th>
    <th>Desired Action</th>
  </tr>
  </thead>

  <tbody>
  <% @events.each_with_index do |event, index|%>
  <tr>
    <td><span class="truncate" style="display: inline-block; width: 130px;"><%= event.channel %></span></td>
    <td ><span class="truncate" style="display: inline-block; width: 130px;"><%= event.name %></span></td>
    <td ><span class="truncate" style="display: inline-block; width: 130px;"><%= event.structure %></span></td>
    <td ><span class="truncate" style="display: inline-block; width: 130px;"><%= event.tone %></span></td>
    <td ><span class="truncate" style="display: inline-block; width: 130px;"><%= event.action %></span></td>
    <td><%= link_to "edit", edit_event_path(event),class:'btn btn-small' %></td>
    <td><%= button_to "delete", event_path(event), method: :delete, form: {data: {turbo_confirm: "Are you sure you want to delete this channel plan?"}}, class:"btn btn-small red" %></td>
  </tr>
    <%end %>
  </tbody>
</table>

</div>
